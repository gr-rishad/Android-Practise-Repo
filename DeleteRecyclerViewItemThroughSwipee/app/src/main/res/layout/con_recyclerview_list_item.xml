<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/containerId"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/recycler_view_foreground"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageId"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher_background"
                />
            <TextView
                android:id="@+id/textStudentId"
                android:layout_toRightOf="@+id/imageId"
                android:text="ID : "
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/studentId"
                android:layout_toRightOf="@+id/textStudentId"
                android:text="143-35-779"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textProNameId"
                android:layout_toRightOf="@+id/imageId"
                android:layout_below="@+id/textStudentId"
                android:text="Pro. Name : "
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/proNameId"
                android:layout_toRightOf="@+id/textProNameId"
                android:layout_below="@+id/textStudentId"
                android:text="B.Sc in SWE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textCampusId"
                android:layout_toRightOf="@+id/imageId"
                android:layout_below="@+id/textProNameId"
                android:text="Campus : "
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/campusId"
                android:layout_toRightOf="@+id/textCampusId"
                android:layout_below="@+id/textProNameId"
                android:text="Dhanmondi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textShiftId"
                android:layout_toRightOf="@+id/imageId"
                android:layout_below="@+id/textCampusId"
                android:text="Shift: "
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shiftId"
                android:layout_toRightOf="@+id/textShiftId"
                android:layout_below="@+id/textCampusId"
                android:text="Morning"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>