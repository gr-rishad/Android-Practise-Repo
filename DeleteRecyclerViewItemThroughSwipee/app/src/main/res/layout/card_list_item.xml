    <RelativeLayout
        android:id="@+id/view_foreground"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/thumbnailId"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/stId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumbnailId"
            android:maxLines="1"
            android:textSize="17sp"
            android:layout_marginRight="10dp"


            />
        <TextView
            android:id="@+id/nameId"
            android:layout_toRightOf="@+id/stId"
            android:ellipsize="end"
            android:fontFamily="sans-serif"

            android:textColor="@color/itemName"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/descriptionId"
            android:layout_below="@+id/nameId"
            android:layout_toRightOf="@+id/thumbnailId"
            android:layout_marginTop="5dp"
            android:textColor="@color/Description"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/priceId"
            android:layout_toRightOf="@+id/thumbnailId"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_below="@+id/descriptionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
