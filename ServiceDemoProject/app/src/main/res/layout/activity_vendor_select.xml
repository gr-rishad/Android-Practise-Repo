<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context=".VendorSelect">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:text="Request Service List"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/requestServiceListId"
            android:layout_width="match_parent"
            android:listSelector="#22ff52"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.8"
        android:background="#AD4A6061"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <fragment
            android:name="com.example.servicedemoproject.BathCleaningFragment"
            android:id="@+id/fragmentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </fragment>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FC0909"
            android:text="Set Vendor"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />


    </LinearLayout>

</LinearLayout>