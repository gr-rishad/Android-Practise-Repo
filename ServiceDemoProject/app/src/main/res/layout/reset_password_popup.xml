<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/forget_pass_popId"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:padding="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="#CCC15B"
                />

            <EditText
                android:id="@+id/passwordId"
                android:layout_below="@id/textViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:hint="Enter Your Code"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="#B8B8B8"
                android:textColor="#E9E9E9"
                android:textColorHint="#B9B9B9"
                android:inputType="textPassword"
                android:layout_marginEnd="15dp"
                android:padding="8dp"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/confirmPasswordId"
                android:layout_below="@id/passwordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:hint="Enter Your New Password"
                android:drawableLeft="@drawable/ic_lock_black"
                android:drawablePadding="15dp"
                android:drawableTint="#B8B8B8"
                android:textColor="#E9E9E9"
                android:textColorHint="#B9B9B9"
                android:inputType="textPassword"
                android:layout_marginEnd="15dp"
                android:padding="8dp"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/reconfirmpasswordId"
                android:layout_below="@id/confirmPasswordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:hint="Re-type Your New Password"
                android:drawableLeft="@drawable/ic_lock_black"
                android:drawablePadding="15dp"
                android:drawableTint="#B8B8B8"
                android:textColor="#E9E9E9"
                android:textColorHint="#B9B9B9"
                android:inputType="textPassword"
                android:layout_marginEnd="15dp"
                android:padding="8dp"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/confirmButtonId"
                android:layout_below="@+id/reconfirmpasswordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:text="CONFIRM"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="18sp" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>